{
  "name": "essential-report-inspection",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "build": "node scripts/copy-report-assets.mjs && npm run copy-rules && npm run copy-template && npm run copy-word-template && npm run copy-word-template-md && npm run copy-responses && npm run copy-mapping && npm run copy-default-text && npm run copy-default-text-library && npm run copy-executive-summary && tsc -b && vite build",
    "copy-rules": "cp rules.yml netlify/functions/rules.yml || true",
    "copy-template": "cp report-template.html netlify/functions/report-template.html || true",
    "copy-word-template": "cp report-template.docx netlify/functions/report-template.docx || true",
    "copy-word-template-md": "cp report-template-md.docx netlify/functions/report-template-md.docx || true",
    "copy-responses": "cp responses.yml netlify/functions/responses.yml || true",
    "copy-mapping": "cp CHECKLIST_TO_FINDINGS_MAP.json netlify/functions/CHECKLIST_TO_FINDINGS_MAP.json || true",
    "copy-default-text": "cp DEFAULT_REPORT_TEXT.md netlify/functions/DEFAULT_REPORT_TEXT.md || true",
    "copy-default-text-library": "cp DEFAULT_TEXT_LIBRARY.md netlify/functions/DEFAULT_TEXT_LIBRARY.md || true",
    "copy-executive-summary": "cp EXECUTIVE_SUMMARY_TEMPLATES.md netlify/functions/EXECUTIVE_SUMMARY_TEMPLATES.md || true",
    "test:markdown": "node scripts/test-markdown-report.mjs",
    "test:priority-resolution": "tsx scripts/test-priority-resolution.ts",
    "test:classify-finding": "tsx scripts/test-classify-finding.ts",
    "test:admin-findings-api": "tsx scripts/test-admin-findings-api.ts",
    "test:custom-priority": "tsx scripts/test-custom-priority.ts",
    "test:capex-custom": "tsx scripts/test-capex-custom.ts",
    "test:property-signals": "tsx scripts/test-property-signals.ts",
    "test:executive-signals": "tsx scripts/test-executive-signals.ts",
    "test:generate-report": "tsx scripts/test-generate-report.ts",
    "test:data-source-mode": "tsx scripts/test-data-source-mode.ts",
    "report:diff": "tsx scripts/compareDocx.ts",
    "verify:docx-links": "tsx scripts/verify-docx-links.ts",
    "verify:evidence": "tsx scripts/verify-evidence-rules.ts",
    "verify:word-report": "tsx scripts/verify-word-report-consistency.ts",
    "db:migrate": "tsx scripts/run-migration.ts",
    "db:seed": "tsx scripts/db-seed-findings.ts",
    "db:seed:messages": "tsx scripts/db-seed-messages.ts",
    "db:validate": "tsx scripts/validate-neon-db.ts",
    "classify:findings": "tsx scripts/apply-finding-classification.ts",
    "audit:dimensions": "tsx scripts/audit-finding-dimensions.ts",
    "sync:dimensions": "tsx scripts/sync-dimensions-to-sources.ts",
    "simulate:inspection": "tsx scripts/simulate-inspection.ts",
    "write-sample-payload": "tsx scripts/simulate-inspection.ts --write-payload",
    "smoke:sanitize": "tsx scripts/smoke-sanitize-anchor.ts",
    "markdown-to-word": "node scripts/markdown-to-word.ts",
    "markdown-to-word-pandoc": "node scripts/markdown-to-word-pandoc.ts",
    "preview": "vite preview",
    "netlify:dev": "npx netlify-cli dev"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "@netlify/blobs": "^10.0.7",
    "docx-merger": "^1.2.2",
    "docxtemplater": "^3.67.6",
    "dotenv": "^16.4.0",
    "html-docx-js-typescript": "^0.1.5",
    "html-to-docx": "^1.8.0",
    "html2canvas": "^1.4.1",
    "html2pdf.js": "^0.14.0",
    "js-yaml": "^4.1.0",
    "jspdf": "^2.5.1",
    "juice": "^11.1.0",
    "markdown-it": "^14.1.0",
    "markdown-it-table": "^4.1.1",
    "pizzip": "^3.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "resend": "^4.0.0"
  },
  "devDependencies": {
    "@netlify/functions": "^2.0.0",
    "@types/html2canvas": "^1.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "fast-xml-parser": "^5.3.3",
    "jszip": "^3.10.1",
    "netlify-cli": "^17.0.0",
    "pg": "^8.13.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^1.2.0"
  }
}
